<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.NotesApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/colorRed</item>
    </style>

    <style name="Base.Theme.Splash" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/colorRed</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.NotesApp</item>
        <item name="windowSplashScreenBackground">@color/colorBg</item>
        <item name="android:windowSplashScreenAnimationDuration" tools:targetApi="s">2000</item>
    </style>

    <style name="Theme.NotesApp" parent="Base.Theme.NotesApp" />

    <style name="BottomSheetStyle" parent="Theme.Design.BottomSheetDialog">
       <item name="bottomSheetStyle">@style/Modal</item>
    </style>

    <style name="Modal" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/delete_sheet</item>
    </style>

</resources>